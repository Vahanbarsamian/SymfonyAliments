{% extends 'base.html.twig' %}

{% block title %}
	/ Add aliment
{% endblock %}

{% block titre %}
	{{titre}}
{% endblock %}
{% block body %}
<div class="container mt-5">
	<div class="row">
		<div class="form-group col-2">
			<img src="{{asset('/img/aliments/' ~ aliment.nom|lower ~ '.png')}}" alt="{{ aliment.image }}" class="rounded img-thumbnail img-fluid">
		</div>
		<div class="form-group col-10">
			{{ form_start(form) }}
			{{ form_row(form.nom,{"attr":{"class":"font-weight-bold","placeholder":"Nom de l'aliment"},"label":"Nom de l'aliment"})}}
			{{ form_row(form.prix,{"attr":{"placeholder":"Prix moyen au Kg"},"label":"Prix moyen/Kg"})}}
			{{form_widget(form)}}
			<input type="submit" class="fa-pull-right btn btn-primary form-group" value="Enregistrer">
			{{ form_end(form) }}
		</div>
	</div>
</div>
{% endblock %}
